<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/pictureIv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/homeImageeHeight"
            android:layout_margin="3dp" />


        <RelativeLayout
            android:id="@+id/descRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pictureIv"
            android:labelFor="@id/pictureIv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/textPadding"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/textPadding"
                android:text="Shoes"
                android:textColor="@color/loginBg" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/textPadding"
            android:background="@drawable/edit_button_view"
            android:src="@drawable/editicon"
            android:text="EDIT"
            android:textColor="@color/white"
            android:tint="@color/white" />

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="@dimen/textPadding"
            android:background="@drawable/delete_button_view"
            android:src="@drawable/delete"
            android:text="DELETE"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>