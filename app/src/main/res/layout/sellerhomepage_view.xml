<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/pictureIv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/homeImageeHeight"
            android:layout_margin="3dp" />


        <RelativeLayout
            android:id="@+id/descRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pictureIv"
            android:labelFor="@id/pictureIv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/textPadding"
                android:text="$25.00"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/textPadding"
                android:text="Shoes"
                android:textColor="@color/loginBg" />
        </RelativeLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descRl"
            android:paddingLeft="@dimen/textPadding"
            android:text="Stockhim Men Shoes"
            android:textSize="@dimen/textSize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_marginTop="@dimen/textPadding"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editBtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/textPadding"
            android:background="@drawable/edit_button_view"
            android:text="EDIT"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/deleteBtn"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textPadding"
            android:background="@drawable/delete_button_view"
            android:text="DELETE"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>